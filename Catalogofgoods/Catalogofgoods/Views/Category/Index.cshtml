@using Catalog.Repository.Dto.CategoryDto
@model IEnumerable<CategoryReadDto>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="float-end">
    <a href="/users/create" class="btn btn-outline-primary">Додати Категорію</a>
</div>


<h1>Список категорій</h1>
<hr />

<!-- Dark Table -->
<table class="table table-dark">
    <thead>
    <th scope="col">Категорія</th>
    <th scope="col"></th>
        @foreach (var u in Model)
        {
        <tr>
            <td>@u.CategoryName </td>
            <td>
                <a href="/users/edit/@u.CategoryId" class="btn btn-warning">Редагувати</a>
                <a href="/users/delete/@u.CategoryId" class="btn btn-danger">Видалити</a>
            </td>
        </tr>
        }
    </thead>
    <tbody>
    </tbody>
</table>
<!-- End Dark Table -->
    </tbody>
</table>